$total-columns = $global-columns;
$column-width = 4em;
$gutter-width = 1em;
$grid-padding = $gutter-width;

// ================================================================================================
//	Container
// ================================================================================================

.container {
	center((($column-width + $gutter-width) * $total-columns), pad = $global-margin);
	border-box-sizing();
  cf();
}

