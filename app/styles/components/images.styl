.img {
	@extend $wrap;
}

.img-thumbnail {
	border: 3px solid white;
	box-shadow(0 2px 4px black(.2));
}

.img-rounded {
	border-radius($global-rounded);
}

.img-block {
	float: none;
	width: 100%;
}
